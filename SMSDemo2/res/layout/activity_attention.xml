<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baise"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/openActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:onClick="toggleMenu"
            android:src="@drawable/attention_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/attention_attention"
            android:textColor="@color/attention_color"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageview_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/singlehead" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/baise"
        android:layout_marginTop="3dp"/>

</LinearLayout>