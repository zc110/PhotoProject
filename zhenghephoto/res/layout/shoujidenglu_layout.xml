<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/image_shoujidenglu_fanhui"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/denglu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#000000"
	    android:layout_marginTop="5dp"/>
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   android:drawableTop="@drawable/shouji"
	    android:layout_gravity="center"
	    android:layout_marginTop="30dp"
	    android:text="@string/shoujidenglu"
	    android:textSize="17sp"
	    android:drawablePadding="5dp"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="85dp"
	    android:background="@drawable/shoujihaoma_bk"
	    android:layout_gravity="center"
	    android:orientation="horizontal"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/quhao"
	        android:id="@+id/quhao"
	        android:textSize="17sp"
	        android:padding="10dp"/>
	    <View android:layout_width="1dp"
	        android:layout_height="45dp"
	        android:background="#000000"
	        android:layout_toRightOf="@id/quhao"
	        android:id="@+id/gexian"
	        android:layout_marginLeft="13dp"
	        android:layout_centerHorizontal="true"/>
	    <EditText 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:hint="@string/shoujihaoma"
	        android:layout_marginLeft="13dp"
	        android:layout_toRightOf="@id/gexian"
	        android:background="@null"
	        android:padding="10dp"
	       android:inputType="number"
	        android:id="@+id/edit_shoujihaoma"
	        android:maxLength="11"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="8dp"
	    android:layout_gravity="center"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp">
	    <EditText 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:hint="@string/yanzhengma"
	       android:maxLength="6"
	       android:inputType="number"
	        android:background="@drawable/bk_yanzhengma"
	        android:id="@+id/edit_yanzhengma"/>
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/huoquyanzhengma"
	        android:layout_marginLeft="5dp"
	        android:id="@+id/image_huoqyyanzhengma"/>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="80dp">
	   
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	      android:layout_centerInParent="true"
	      >
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/youxiangdenglu"
	            android:id="@+id/text_jinruyouxiangdenglu"
	            android:layout_gravity="center"/>
	        <View 
	            android:layout_width="60dp"
	            android:layout_height="1dp"
	            android:background="#eeeeee"
	            android:layout_gravity="center"/>
	    </LinearLayout>
	    
	</RelativeLayout>
	<ImageView 
	    android:id="@+id/shoujidenglu_denglu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/image_denglu"
	    android:layout_gravity="center"
	    android:layout_marginTop="18dp"
	   />
</LinearLayout>
